generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         String              @id @default(cuid())
  email                      String              @unique
  name                       String?
  firstName                  String?
  lastName                   String?
  role                       Role                @default(USER)
  password                   String?
  profileImage               String?
  isActive                   Boolean             @default(true)
  createdAt                  DateTime            @default(now())
  updatedAt                  DateTime            @updatedAt
  accounts                   Account[]
  contentItems               ContentItem[]
  uploadedFiles              MediaFile[]         @relation("MediaFileUploader")
  approvedMembershipRequests MembershipRequest[] @relation("MembershipRequestApprover")
  reviewedMembershipRequests MembershipRequest[] @relation("MembershipRequestReviewer")
  statusHistoryChanges       MembershipRequestStatusHistory[]
  boardMemberVotes           BoardMemberVote[]   @relation("BoardMemberVotes")
  sessions                   Session[]
  activityLogs               ActivityLog[]
  events                     Event[]
  eventRegistrations         EventRegistration[]
  initiativesLed             Initiative[]              @relation("InitiativeProjectLead")
  initiativeMemberships      InitiativeMember[]        @relation("InitiativeMemberUser")
  assignedTasks              Task[]                    @relation("TaskAssignedTo")
  initiativeUpdates          InitiativeUpdate[]        @relation("InitiativeUpdateAuthor")
  initiativeJoinRequests     InitiativeJoinRequest[]   @relation("InitiativeJoinRequestUser")
  reviewedJoinRequests       InitiativeJoinRequest[]   @relation("InitiativeJoinRequestReviewer")
  member                     Member?                   @relation("UserMember")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model ContentItem {
  id           String                @id @default(cuid())
  slug         String                @unique
  type         ContentType           @default(PAGE)
  status       Status                @default(DRAFT)
  featuredImg  String?
  authorId     String
  publishedAt  DateTime?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  categories   ContentItemCategory[]
  tags         ContentItemTag[]
  author       User                  @relation(fields: [authorId], references: [id])
  translations ContentTranslation[]

  @@map("content_items")
}

model ContentTranslation {
  id              String      @id @default(cuid())
  contentItemId   String
  language        String
  title           String
  content         String
  excerpt         String
  seoTitle        String?
  metaDescription String?
  contentItem     ContentItem @relation(fields: [contentItemId], references: [id], onDelete: Cascade)

  @@unique([contentItemId, language])
  @@map("content_translations")
}

model Category {
  id           String                @id @default(cuid())
  slug         String                @unique
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  parentId     String?
  type         String                @default("general")
  parent       Category?             @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children     Category[]            @relation("CategoryHierarchy")
  translations CategoryTranslation[]
  contentItems ContentItemCategory[]
  events       EventCategory[]

  @@map("categories")
}

model CategoryTranslation {
  id          String   @id @default(cuid())
  categoryId  String
  language    String
  name        String
  description String?
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([categoryId, language])
  @@map("category_translations")
}

model ContentItemCategory {
  contentItemId String
  categoryId    String
  category      Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  contentItem   ContentItem @relation(fields: [contentItemId], references: [id], onDelete: Cascade)

  @@id([contentItemId, categoryId])
  @@map("content_item_categories")
}

model Tag {
  id           String           @id @default(cuid())
  slug         String           @unique
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  contentItems ContentItemTag[]
  translations TagTranslation[]
  events       EventTag[]

  @@map("tags")
}

model TagTranslation {
  id       String @id @default(cuid())
  tagId    String
  language String
  name     String
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([tagId, language])
  @@map("tag_translations")
}

model ContentItemTag {
  contentItemId String
  tagId         String
  contentItem   ContentItem @relation(fields: [contentItemId], references: [id], onDelete: Cascade)
  tag           Tag         @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([contentItemId, tagId])
  @@map("content_item_tags")
}

model MediaFile {
  id           String   @id @default(cuid())
  filename     String   @unique
  originalName String
  url          String
  altText      String?
  caption      String?
  mimeType     String
  fileSize     Int?
  category     String   @default("images")
  uploaderId   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  uploader     User?    @relation("MediaFileUploader", fields: [uploaderId], references: [id])

  @@map("media_files")
}

model Service {
  id           String               @id @default(cuid())
  slug         String               @unique
  icon         String?
  order        Int                  @default(0)
  active       Boolean              @default(true)
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  colorTheme   String?              @default("navy")
  featuredImg  String?
  translations ServiceTranslation[]

  @@map("services")
}

model ServiceTranslation {
  id          String  @id @default(cuid())
  serviceId   String
  language    String
  title       String
  description String
  buttonText  String  @default("Learn More")
  service     Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([serviceId, language])
  @@map("service_translations")
}

model Member {
  id                 String              @id @default(cuid())
  userId             String?             @unique
  memberNumber       String              @unique
  firstName          String
  lastName           String
  firstNameKhmer     String?
  lastNameKhmer      String?
  email              String              @unique
  phone              String?
  address            String?
  city               String?
  postalCode         String?
  country            String?             @default("Sweden")
  membershipType     MembershipType      @default(REGULAR)
  residenceStatus    ResidenceStatus?
  joinedAt           DateTime            @default(now())
  active             Boolean             @default(true)
  profileImage       String?
  bio                String?
  skills             String[]
  interests          String[]
  emergencyContact   String?
  emergencyPhone     String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  user               User?               @relation("UserMember", fields: [userId], references: [id])
  membershipRequests MembershipRequest[]

  @@map("members")
}

model MembershipRequest {
  id                  String           @id @default(cuid())
  requestNumber       String           @unique
  firstName           String
  lastName            String
  firstNameKhmer      String?
  lastNameKhmer       String?
  dateOfBirth         DateTime?
  email               String
  phone               String?
  address             String?
  city                String?
  postalCode          String?
  country             String           @default("Sweden")
  residenceStatus     ResidenceStatus?
  residenceSince      DateTime?
  motivation          String
  hearAboutUs         String?
  interests           String?
  skills              String?
  requestedMemberType MembershipType   @default(REGULAR)
  status              RequestStatus    @default(PENDING)
  submittedAt         DateTime         @default(now())
  reviewedBy          String?
  reviewedAt          DateTime?
  reviewNotes         String?
  approvedBy          String?
  approvedAt          DateTime?
  createdMemberId     String?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  adminNotes          String?
  rejectionReason     String?
  preferredLanguage   String?          @default("en")
  approvalSystem      ApprovalSystem   @default(SINGLE)
  approver            User?            @relation("MembershipRequestApprover", fields: [approvedBy], references: [id])
  createdMember       Member?          @relation(fields: [createdMemberId], references: [id])
  reviewer            User?            @relation("MembershipRequestReviewer", fields: [reviewedBy], references: [id])
  statusHistory       MembershipRequestStatusHistory[]
  boardVotes          BoardMemberVote[]

  @@map("membership_requests")
}

model MembershipRequestStatusHistory {
  id                    String           @id @default(cuid())
  membershipRequestId   String
  fromStatus            RequestStatus?
  toStatus              RequestStatus
  changedBy             String?
  changedAt             DateTime         @default(now())
  notes                 String?
  membershipRequest     MembershipRequest @relation(fields: [membershipRequestId], references: [id], onDelete: Cascade)
  changedByUser         User?            @relation(fields: [changedBy], references: [id])

  @@map("membership_request_status_history")
}

model BoardMemberVote {
  id                    String            @id @default(cuid())
  membershipRequestId   String
  boardMemberId         String
  vote                  VoteDecision
  votedAt               DateTime          @default(now())
  notes                 String?
  membershipRequest     MembershipRequest @relation(fields: [membershipRequestId], references: [id], onDelete: Cascade)
  boardMember           User              @relation("BoardMemberVotes", fields: [boardMemberId], references: [id])

  @@unique([membershipRequestId, boardMemberId])
  @@map("board_member_votes")
}


enum Role {
  USER
  AUTHOR
  MODERATOR
  EDITOR
  BOARD
  ADMIN
}

enum ContentType {
  PAGE
  POST
}

enum Status {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum MembershipType {
  REGULAR
  STUDENT
  FAMILY
  BOARD
  VOLUNTEER
  HONORARY
  LIFETIME
}

enum ResidenceStatus {
  CITIZEN
  PERMANENT_RESIDENT
  EU_CITIZEN
  STUDENT
  WORK_PERMIT
  ASYLUM_SEEKER
  OTHER
}

enum RequestStatus {
  PENDING
  UNDER_REVIEW
  ADDITIONAL_INFO_REQUESTED
  APPROVED
  REJECTED
}

enum ApprovalSystem {
  SINGLE          // Legacy: Single approver (backward compatibility)
  MULTI_BOARD     // New: Multiple board member votes required
}

enum ApprovalThreshold {
  UNANIMOUS        // All board members must approve
  MAJORITY         // More than 50% (handles odd numbers naturally)
  SIMPLE_MAJORITY  // At least 50%, rounded up
  ANY_TWO          // Minimum 2 approvals
  SINGLE           // Just 1 approval (for legacy/testing)
}

enum VoteDecision {
  APPROVE
  REJECT
  ABSTAIN
}

enum EventLocationType {
  PHYSICAL
  VIRTUAL
  HYBRID
}

enum RegistrationType {
  PUBLIC
  MEMBERS_ONLY
}

enum RegistrationStatus {
  CONFIRMED
  CANCELLED
  WAITLIST
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String?
  type      SettingType @default(TEXT)
  category  String   @default("general")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

enum SettingType {
  TEXT
  NUMBER
  BOOLEAN
  JSON
  URL
  EMAIL
  IMAGE
}

model ActivityLog {
  id           String   @id @default(cuid())
  userId       String
  action       String   // e.g., "page.created", "user.updated", "auth.login"
  resourceType String   // e.g., "PAGE", "USER", "POST", "MEDIA"
  resourceId   String?  // ID of the affected resource
  description  String   // Human-readable description
  oldValues    Json?    // Previous state (for updates)
  newValues    Json?    // New state (for updates)
  metadata     Json?    // Additional context (e.g., changed fields, file sizes)
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())

  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes for performance
  @@index([userId])
  @@index([action])
  @@index([resourceType])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@map("activity_logs")
}

model Event {
  id                    String                @id @default(cuid())
  slug                  String                @unique

  // Event Details
  startDate             DateTime
  endDate               DateTime
  allDay                Boolean               @default(false)

  // Location
  locationType          EventLocationType
  venueName             String?
  address               String?
  postalCode            String?
  city                  String?
  country               String?               @default("Sweden")
  virtualUrl            String?

  // Registration Settings
  registrationEnabled   Boolean               @default(false)
  registrationType      RegistrationType?
  registrationDeadline  DateTime?
  maxCapacity           Int?
  currentAttendees      Int                   @default(0)

  // Pricing
  isFree                Boolean               @default(true)
  price                 Decimal?
  currency              String                @default("SEK")

  // Additional Info
  organizer             String?
  contactEmail          String?
  externalUrl           String?

  // Content
  featuredImg           String?
  status                Status                @default(DRAFT)
  authorId              String
  publishedAt           DateTime?

  // Relations
  author                User                  @relation(fields: [authorId], references: [id])
  translations          EventTranslation[]
  categories            EventCategory[]
  tags                  EventTag[]
  registrations         EventRegistration[]

  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt

  @@map("events")
}

model EventTranslation {
  id              String   @id @default(cuid())
  eventId         String
  language        String   // sv | en | km

  title           String
  content         String   @db.Text
  excerpt         String?  @db.Text
  seoTitle        String?
  metaDescription String?

  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([eventId, language])
  @@map("event_translations")
}

model EventRegistration {
  id              String             @id @default(cuid())
  eventId         String

  // User info (if logged in)
  userId          String?

  // Guest info (if not logged in, for PUBLIC events)
  guestFirstName  String?
  guestLastName   String?
  guestEmail      String?
  guestPhone      String?

  // Registration details
  registeredAt    DateTime           @default(now())
  status          RegistrationStatus @default(CONFIRMED)
  numberOfGuests  Int                @default(1)
  notes           String?            @db.Text

  // Relations
  event           Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user            User?              @relation(fields: [userId], references: [id])

  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@index([eventId])
  @@index([userId])
  @@map("event_registrations")
}

model EventCategory {
  eventId    String
  categoryId String

  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([eventId, categoryId])
  @@map("event_categories")
}

model EventTag {
  eventId String
  tagId   String

  event   Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  tag     Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([eventId, tagId])
  @@map("event_tags")
}

model BoardMember {
  id             String                    @id @default(cuid())
  slug           String                    @unique
  firstName      String
  lastName       String
  firstNameKhmer String?
  lastNameKhmer  String?
  profileImage   String?
  email          String?
  phone          String?
  order          Int                       @default(0)
  isChairman     Boolean                   @default(false)
  active         Boolean                   @default(true)
  joinedBoard    DateTime?
  createdAt      DateTime                  @default(now())
  updatedAt      DateTime                  @updatedAt
  translations   BoardMemberTranslation[]

  @@map("board_members")
}

model BoardMemberTranslation {
  id            String      @id @default(cuid())
  boardMemberId String
  language      String      // sv | en | km
  position      String      // "Chairman", "Board Member", "Vice Chairman"
  education     String      @db.Text
  vision        String      @db.Text
  bio           String?     @db.Text
  boardMember   BoardMember @relation(fields: [boardMemberId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([boardMemberId, language])
  @@map("board_member_translations")
}

// ============================================
// Initiatives/Projects Feature
// ============================================

model Initiative {
  id                String                 @id @default(cuid())
  slug              String                 @unique

  // Publishing workflow (like pages/posts)
  status            InitiativeStatus       @default(DRAFT)
  visibility        Visibility             @default(PUBLIC)

  // Project info
  category          InitiativeCategory
  startDate         DateTime
  endDate           DateTime?              // null = ongoing

  // Media
  featuredImage     String?

  // Team
  projectLeadId     String
  projectLead       User                   @relation("InitiativeProjectLead", fields: [projectLeadId], references: [id])

  // Relations
  translations      InitiativeTranslation[]
  members           InitiativeMember[]
  tasks             Task[]
  updates           InitiativeUpdate[]
  joinRequests      InitiativeJoinRequest[]

  createdAt         DateTime               @default(now())
  updatedAt         DateTime               @updatedAt

  @@index([status])
  @@index([visibility])
  @@index([category])
  @@index([projectLeadId])
  @@map("initiatives")
}

model InitiativeTranslation {
  id                String     @id @default(cuid())
  initiativeId      String
  language          String     // sv | en | km

  title             String
  shortDescription  String     // For cards (160 chars)
  description       String     @db.Text  // Rich text, full details

  seoTitle          String?
  metaDescription   String?

  initiative        Initiative @relation(fields: [initiativeId], references: [id], onDelete: Cascade)

  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@unique([initiativeId, language])
  @@map("initiative_translations")
}

model InitiativeMember {
  id                String      @id @default(cuid())
  initiativeId      String
  userId            String

  role              MemberRole  @default(MEMBER)
  joinedAt          DateTime    @default(now())

  // What they're helping with (optional note)
  contributionNote  String?     @db.Text

  initiative        Initiative  @relation(fields: [initiativeId], references: [id], onDelete: Cascade)
  user              User        @relation("InitiativeMemberUser", fields: [userId], references: [id])

  @@unique([initiativeId, userId])
  @@index([userId])
  @@map("initiative_members")
}

model Task {
  id              String       @id @default(cuid())
  initiativeId    String

  // Multilingual (show what's available - not all required)
  titleEn         String?
  titleSv         String?
  titleKm         String?
  descriptionEn   String?      @db.Text
  descriptionSv   String?      @db.Text
  descriptionKm   String?      @db.Text

  // Assignment
  assignedToId    String?
  assignedTo      User?        @relation("TaskAssignedTo", fields: [assignedToId], references: [id])

  status          TaskStatus   @default(TODO)
  priority        TaskPriority @default(MEDIUM)
  dueDate         DateTime?
  completedAt     DateTime?

  order           Int          @default(0)  // For sorting

  initiative      Initiative   @relation(fields: [initiativeId], references: [id], onDelete: Cascade)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([initiativeId])
  @@index([assignedToId])
  @@index([status])
  @@map("tasks")
}

model InitiativeUpdate {
  id            String      @id @default(cuid())
  initiativeId  String
  userId        String      // Who posted

  title         String
  content       String      @db.Text
  type          UpdateType  @default(UPDATE)
  images        String[]    // Array of image URLs

  publishedAt   DateTime    @default(now())

  initiative    Initiative  @relation(fields: [initiativeId], references: [id], onDelete: Cascade)
  author        User        @relation("InitiativeUpdateAuthor", fields: [userId], references: [id])

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([initiativeId])
  @@index([userId])
  @@map("initiative_updates")
}

model InitiativeJoinRequest {
  id            String            @id @default(cuid())
  initiativeId  String
  userId        String
  status        JoinRequestStatus @default(PENDING)
  message       String?           @db.Text  // Optional message from the requester

  reviewedAt    DateTime?
  reviewedBy    String?
  reviewNote    String?           @db.Text  // Optional note from reviewer

  initiative    Initiative        @relation(fields: [initiativeId], references: [id], onDelete: Cascade)
  user          User              @relation("InitiativeJoinRequestUser", fields: [userId], references: [id], onDelete: Cascade)
  reviewer      User?             @relation("InitiativeJoinRequestReviewer", fields: [reviewedBy], references: [id])

  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@unique([initiativeId, userId])  // One request per user per initiative
  @@index([status])
  @@index([initiativeId])
  @@index([userId])
  @@map("initiative_join_requests")
}

// Enums for Initiatives

enum InitiativeStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum Visibility {
  PUBLIC
  MEMBERS_ONLY
}

enum InitiativeCategory {
  CULTURAL_EVENT
  BUSINESS
  EDUCATION
  TRANSLATION
  SOCIAL
  OTHER
}

enum MemberRole {
  LEAD
  CO_LEAD
  MEMBER
}

enum JoinRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum UpdateType {
  MILESTONE
  UPDATE
  ANNOUNCEMENT
}
